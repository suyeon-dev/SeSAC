<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JWT</title>
    <!-- axios cdn -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <h1>JWT</h1>
    <div id="info"></div>
    <script>
      //즉시 실행 함수: axios 요청과 전역 변수 선언을 피하기 위해서 사용
      (function text(i) {
        console.log(i);
      })('hello');

      (() => {
        console.log('화살표 함수 즉시 실행');
      })();

      (function () {
        console.log('즉시 실행 함수');
      })();

      (async function () {
        const token = localStorage.getItem('login');
        const info = document.getElementById('info');
        console.log(token); //토큰이 없을 때는 null

        let data;
        if (!token) {
          //토큰이 없을 때(null) 로그인 페이지로 이동할 수 있도록
          data = '<a href="/login">로그인</a>';
        } else {
          //토큰이 있을 때,
          //토큰 검증 과정을 거쳐서 (in server) axios POST /token
          const response = await axios({
            method: 'post',
            url: '/token',
            // 토큰 정보는 body가 아닌 header에 담아서 보냄 (get일 때도 header에 담아서)
            headers: {
              Authorization: `Bearer ${token}`,
            },
          });
          console.log(response.data);
          //~님 환영합니다, 로그아웃 버튼
          if (response.data.result) {
            data = `
            <p>${response.data.name}님 환영합니다!</p>
            <button onclick='logout();'>로그아웃</button>
            `;
          }
        }
        info.innerHTML = data;
      })();

      function logout() {
        localStorage.clear();
        // document.location.href('/') 또는 reload
        document.location.reload(); //새로고침
      }
    </script>
  </body>
</html>
